<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.admin.composerblocknote.StudioActivity">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <com.example.admin.composerblocknote.StudioManagerView
            android:id="@+id/myStudioManager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="8dp"></com.example.admin.composerblocknote.StudioManagerView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <com.cuboid.cuboidcirclebutton.CuboidButton
                android:id="@+id/recordStop"
                android:layout_width="wrap_content"
                android:layout_height="120dp"
                android:layout_marginLeft="50dp"
                android:layout_weight="1"
                android:text="Normal"
                android:textColor="@android:color/white"
                android:textSize="14sp"
                app:cub_border_color="@color/colorPrimaryDark"
                app:cub_border_radius="5dp"
                app:cub_color="@color/colorPrimary"
                app:cub_hover_color="@color/colorPrimaryDark"
                app:cub_icon="@drawable/ic_micro_white" />

            <com.cuboid.cuboidcirclebutton.CuboidButton
                android:id="@+id/play"
                android:layout_width="wrap_content"
                android:layout_height="120dp"
                android:layout_marginRight="50dp"
                android:layout_weight="1"
                android:textColor="@android:color/white"
                android:textSize="14sp"
                android:text="Normal"
                app:cub_border_radius="5dp"
                app:cub_border_color="@color/colorPrimaryDark"
                app:cub_color="@color/colorPrimary"
                app:cub_hover_color="@color/colorPrimaryDark"
                app:cub_icon="@drawable/ic_play_white"
                />

        </LinearLayout>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>
